{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": ["es6", "es2015","ESNext","DOM"],
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
    },
    "exclude": [
      "dist",
      "node_modules",
      "src/**/*.spec.ts"
    ],
    "include": [
      "src"
    ]
}